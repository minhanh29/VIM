    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },
	"python.pythonPath": "python3",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.jediEnabled": false,
    "python.linting.enabled": true,
	"python.venvPath": "/Users/minhanh/anaconda3/envs",
	"codeLens.enable": true,
	"java.referencesCodeLens.enabled": true,
	"java..ls.vmargs": "-javaagent:/usr/local/share/lombok/lombok.jar"
